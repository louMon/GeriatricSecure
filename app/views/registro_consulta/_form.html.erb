<%= nested_form_for @registroconsultum do |f| %>
    <% if @registroconsultum.errors.any?%>
        <% @registroconsultum.errors.full_messages.each do |error| %>
          <p><%= error %></p>
        <% end %>
    <% end %>
    <div class="row">
        <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-content text-center p-md">
                        <h1><span class="text-navy"><strong>Registro de Consulta</strong></span></h1>
                        <%= link_to 'Historia Clinica'.html_safe, edit_historia_clinica_path(@registroconsultum.citum.usuario.historia_clinica), class: "btn btn-warning btn-sm text-center", data: { "toggle" => "tooltip" }%>
                    </div>
                </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="ibox float-e-margins">
                <div class="ibox-content p-md" style="height: 250px">
                    <h3 class="m-b-xxs"><strong>Datos Personales</strong></h3>
                    <br>
                    <div class="row">
                        <div class="ibox float-e-margins">
                            <div class="ibox-content">
                                <div class="form-group" style="padding-bottom: 35px">
                                    <div class="col-sm-12">
                                        <label class="col-sm-2 control-label" style="margin-top: 10px">Paciente:</label>
                                        <div class="col-sm-10"><input type="text" class="form-control" disabled="" value=" <%= @registroconsultum.citum.usuario.apellidos %>, <%= @registroconsultum.citum.usuario.nombres %>"> </div>
                                    </div>
                                </div>
                                <div class="form-group" style="padding-bottom: 40px">
                                    <div class="col-sm-6">
                                        <label class="col-sm-4 control-label" style="margin-top: 10px">Edad:</label>
                                        <div class="col-sm-8"><input type="text" class="form-control" disabled="" value=" <%= @registroconsultum.citum.usuario.get_edad(@registroconsultum.citum.usuario.fecha_nacimiento) %> aÃ±os"></div>
                                    </div>
                                    <div class="col-sm-6">
                                        <label class="col-sm-4 control-label" style="margin-top: 10px">DNI:</label>
                                        <div class="col-sm-8"><input type="text" class="form-control" disabled="" value=" <%= @registroconsultum.citum.usuario.dni %>"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="ibox float-e-margins">
                <div class="ibox-content p-md" style="height: 250px">
                    <h3 class="m-b-xxs"><strong>Signos Vitales</strong></h3>
                    <br>
                    <div class="row">
                        <div class="ibox float-e-margins">
                            <div class="ibox-content">
                                <div class="form-group" style="padding-bottom: 35px">
                                    <div class="col-sm-4">
                                        <%= f.label 'Talla', class: "control-label" %>
                                        <%= f.text_field :talla, class: "form-control", maxlength:"7", required:"required" %>
                                    </div>
                                    <div class="col-sm-4">
                                        <%= f.label 'Peso', class: "control-label" %>
                                        <%= f.text_field :peso, class: "form-control", maxlength:"7", required:"required" %>
                                    </div>
                                    <div class="col-sm-4">
                                        <%= f.label 'Temperatura', class: "control-label" %>
                                        <%= f.text_field :temperatura, class: "form-control", maxlength:"5", required:"required" %>
                                    </div>
                                </div>
                                <div class="form-group" style="padding-bottom: 40px" >
                                    <div class="col-sm-6">
                                        <%= f.label 'Presion Arterial', class: "control-label" %>
                                        <%= f.text_field :presion_arterial, class: "form-control", maxlength:"8", required:"required" %>
                                    </div>
                                    <div class="col-sm-6">
                                        <%= f.label 'Nivel de Azucar', class: "control-label" %>
                                        <%= f.text_field :nivel_azucar, class: "form-control", maxlength:"8", required:"required" %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row" >
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content p-md">
                    <h3 class="m-b-xxs text-center"><strong>Detalle del Diagnostico</strong></h3>
                    <div class="row">
                        <div class="col-lg-12"  >
                            <div class="tabs-container">
                                    <ul class="nav nav-tabs">
                                        <li class="active"><a data-toggle="tab" href="#tab-1"> Anamnesis</a></li>
                                        <li class=""><a data-toggle="tab" href="#tab-2"> Examen Fisico</a></li>
                                        <li class=""><a data-toggle="tab" href="#tab-3"> Diagnostico</a></li>
                                    </ul>
                                    <div class="tab-content">
                                        <div id="tab-1" class="tab-pane active">
                                            <div class="panel-body" style="height: 250px">
                                                <div class="form-group">
                                                    <div class="col-sm-12">
                                                        <%= f.label 'Relato del paciente', class: "control-label" %>
                                                        <%= f.text_area :anamnesis, class: "form-control", placeholder:"Escribe aqui el relato del paciente", maxlength:"200", required:"required" %>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div id="tab-2" class="tab-pane">
                                            <div class="panel-body" style="height: 250px">
                                                <fieldset class="form-horizontal">
                                                    <div class="form-group">
                                                        <%= f.label 'Descripcion del Examen', class: "control-label" %>
                                                        <%= f.text_field :descripcion_examen_fisico, class: "form-control", placeholder:"Escribe la descripcion del examen", maxlength:"100", required:"required" %>
                                                    </div>
                                                    <div class="form-group">
                                                        <%= f.label 'Resultado del Examen', class: "control-label" %>
                                                        <%= f.text_field :resultado_examen, class: "form-control", placeholder:"Escribe el resultado del examen", maxlength:"100", required:"required" %>
                                                    </div>
                                                </fieldset>
                                            </div>
                                        </div>
                                        <div id="tab-3" class="tab-pane">
                                            <div class="panel-body" style="height: auto">
                                                <%= link_to_add_row('Agregar Diagnostico', f, :diagnostico_x_registro_consulta, class: 'btn btn-primary')%>
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th>Diagnostico</th>
                                                            <th>Peso Asignado</th>
                                                            <th>Enfermedad Cronica</th>
                                                            <th></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody class="fields">
                                                         <%= f.fields_for :diagnostico_x_registro_consulta do |d| %>
                                                            <%= render 'diagnostico_x_registro_consultum',f: d %>
                                                          <% end %>
                                                    </tbody>
                                                </table>
                                           </div>
                                        </div>
                                    </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group ">
                                <div class="text-center">
                                    <%= link_to "Regresar", cita_path, class: "btn btn-default sical-btn-cancel" %>
                                    <%= f.submit "Guardar", class: "btn btn-primary", data: {disable_with: 'Please Wait...'}  %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% end %>