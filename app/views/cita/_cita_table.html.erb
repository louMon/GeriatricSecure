<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <div class="row">
                  <%= link_to 'Nueva Cita', new_citum_path, class: "btn btn-primary pull-right" %>
                </div>
            </div>
            <div class="ibox-content">
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>Fecha de Registro</th>
                    <th>Medico</th>
                    <th>Especialidad</th>
                    <th>Dia de la Cita</th>
                    <th>Horario de la Cita</th>
                    <th>Nombre del Paciente</th>
                    <th colspan="3">Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  <% @cita.each do |citum| %>
                    <tr>
                      <td><%= citum.fecha_registro %></td>
                      <td><%= citum.horario.usuario.nombres %></td>
                      <td><%= citum.horario.usuario.especialidad.nombre %></td>
                      <td><%= citum.horario.dia %></td>
                      <td><%= citum.horario.horario %></td>
                      <td><%= citum.usuario.nombres%></td>
                      <td class="text-center">
                        <%= link_to '<i class="fa fa-eye" aria-hidden="true"></i>'.html_safe, citum_path(citum), class: "btn btn-info btn-sm", data: { "toggle" => "tooltip" }, title: "Ver" %>
                        <%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_citum_path(citum), class: "btn btn-success btn-sm", data: { "toggle" => "tooltip" }, title: "Editar" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
        </div>
    </div>
  </div>