<p id="notice"><%= notice %></p>

<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
      <h2>Citas</h2>
  </div>
  <div class="col-lg-2">

  </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Se presenta la relacion de citas</h5>
            </div>
            <div class="ibox-content">
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>Fecha de Registro</th>
                    <th>Medico</th>
                    <th>Especialidad</th>
                    <th>Dia de la Cita</th>
                    <th>Horario de la Cita</th>
                    <th colspan="3">Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  <% @cita.each do |citum| %>
                    <tr>
                      <td><%= citum.fecha_registro %></td>
                      <td><%= citum.horario_id.usuario_id.nombres %></td>
                      <td><%= citum.horario_id.usuario_id.especialidad_id.nombre %></td>
                      <td><%= citum.horario_id.dia %></td>
                      <td><%= citum.horario_id.horario %></td>
                      <td><%= link_to 'Mostrar', citum %></td>
                      <td><%= link_to 'Editar', edit_citum_path(citum) %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
        </div>
    </div>
  </div>
</div>