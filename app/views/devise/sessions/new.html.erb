<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field login-field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"Usuario"%>
  </div>
  <br />
  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder:"ContraseÃ±a" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="text-center">
    <%= f.submit "Ingresar", class: "btn btn-primary block full-width m-b" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
