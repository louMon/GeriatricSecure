<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>DNI</th>
                    <th>Paciente</th>
                    <th>Estado</th>
                    <th colspan="3" class="text-center">Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  <% @pacientes.each do |p| %>
                    <tr>
                      <td><%= p.dni %></td>
                      <td><%= p.apellidos %>, <%= p.nombres %></td>
                      <td><%= p.estado %></td>
                      <td class="text-center">
                        <%= link_to '<i class="fa fa-eye" aria-hidden="true"></i>'.html_safe, paciente_path(p), class: "btn btn-info btn-sm", data: { "toggle" => "tooltip" }, title: "Ver" %>
                        <%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_paciente_path(p), class: "btn btn-success btn-sm", data: { "toggle" => "tooltip" }, title: "Editar" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
        </div>
    </div>
  </div>