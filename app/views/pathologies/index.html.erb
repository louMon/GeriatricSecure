<p id="notice"><%= notice %></p>

<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
      <h2>Patologias</h2>
  </div>
  <div class="col-lg-2">

  </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5> </h5>
            </div>
            <div class="ibox-content">
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>ID Patologia</th>
                    <th>Codigo CIE10</th>
                    <th>Nombre de la Patologia</th>
                    <th>Descripcion</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @pathologies.each do |pathology| %>
                    <tr>
                      <td><%= pathology.idpathology %></td>
                      <td><%= pathology.cie10_code %></td>
                      <td><%= pathology.pathology_name %></td>
                      <td><%= pathology.description %></td>
                      <td><%= link_to 'Mostrar', pathology %></td>
                      <td><%= link_to 'Editar', edit_pathology_path(pathology) %></td>
                      <td><%= link_to 'Eliminar', pathology, method: :delete, data: { confirm: 'Estas seguro(a) de eliminar?' } %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
        </div>
    </div>
  </div>
  <%= link_to 'Nueva Patologia', new_pathology_path %>
</div>