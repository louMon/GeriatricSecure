<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="row">
            <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-content text-center p-md">
                            <h1><span class="text-navy"><strong>Historia Clínica</strong> Edicion</span></h1>
                            <div class="form-group ">
                                <div class="pull-left">
                                    <%= link_to "Regresar", edit_registro_consultum_path(@historia_clinica.usuario), class: "btn btn-warning" %>
                                </div>
                            </div>
                            <div class="ibox-content">
                              <div class="col-lg-6">
                                  <div class="col-lg-8">
                                     <h3><strong> Paciente:</strong> <%= @historia_clinica.usuario.apellidos %>, <%= @historia_clinica.usuario.nombres %></h2> 
                                  </div>
                                  <div class="col-lg-4">
                                     <h3><strong>Edad:</strong> <%= @historia_clinica.usuario.get_edad(@historia_clinica.usuario.fecha_nacimiento)  %> años</h2>
                                  </div>
                              </div>
                              <div class="col-lg-6">
                                  <div class="col-lg-4">
                                     <h3><strong> DNI: </strong><%= @historia_clinica.usuario.dni %></h2> 
                                  </div>
                                  <div class="col-lg-8">
                                     <h3><strong>Correo Electronico:  </strong> <%= @historia_clinica.usuario.email %></h2>
                                  </div>
                              </div>
                          </div>
                        </div>
                    </div>
            </div>
        </div>
        <%= render 'form', historia_clinica: @historia_clinica, method: :put, path: edit_historia_clinica_path %>
</div>


